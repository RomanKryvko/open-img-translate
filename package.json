{
  "name": "open-img-translate",
  "version": "0.0.1",
  "description": "A firefox extension for translating images.",
  "keywords": [
    "firefox",
    "translator"
  ],
  "homepage": "https://github.com/RomanKryvko/open-img-translate#readme",
  "bugs": {
    "url": "https://github.com/RomanKryvko/open-img-translate/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RomanKryvko/open-img-translate.git"
  },
  "license": "GPL-3.0",
  "author": "Roman Kryvko",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "build": "vite build --config vite.config.background.js && vite build --config vite.config.content.js && cp -r src/_locales/ src/styles/ src/manifest.json dist/",
    "dev": "npm run build && cd dist/ && web-ext run"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.2.1",
    "@types/firefox-webext-browser": "^143.0.0",
    "@types/node": "^24.9.0",
    "prettier": "^3.7.4",
    "prettier-plugin-svelte": "^3.4.1",
    "svelte": "^5.43.0",
    "typescript": "^5.9.3",
    "vite": "^7.1.11",
    "web-ext": "^9.0.0"
  },
  "dependencies": {
    "tesseract.js": "^6.0.1"
  }
}
