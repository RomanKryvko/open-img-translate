{
  "manifest_version": 2,
  "name": "OpenImgTranslate",
  "version": "0.0.1",
  "default_locale": "en",
  "description": "A firefox extension for translating images.",

  "background": {
    "scripts": ["index.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles/content.css"]
    }
  ],

  "permissions": ["menus", "activeTab", "scripting"]
}
