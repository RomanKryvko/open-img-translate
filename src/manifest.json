{
  "manifest_version": 2,
  "name": "OpenImgTranslate",
  "version": "0.0.1",
  "default_locale": "en",
  "description": "A firefox extension for translating images.",

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "open-img-translate@romankryvko"
    }
  },
  "background": {
    "scripts": ["index.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["styles/content.css"]
    }
  ],
  "permissions": ["menus", "activeTab", "scripting", "storage", "*://*.deepl.com/*"]
}
